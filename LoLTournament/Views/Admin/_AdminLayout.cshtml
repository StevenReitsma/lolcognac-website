@using LoLTournament.Helpers
@{
    Layout = "";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>CognAC League of Legends Tournament | Admin</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Content/Admin/AdminLTE.min.css">
    <link rel="stylesheet" href="~/Content/Admin/skins/skin-blue.min.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition skin-blue fixed sidebar-mini">
<div class="wrapper">
    <header class="main-header">
        <a href="@Url.Action("Index", "Admin")" class="logo">
            <span class="logo-mini"><b>C</b>LT</span>
            <span class="logo-lg"><b>CLT</b>Admin</span>
        </a>

        <nav class="navbar navbar-static-top" role="navigation">
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
            </a>
        </nav>
    </header>
    <aside class="main-sidebar">

        <section class="sidebar">
            <ul class="sidebar-menu">
                <li class="header">GENERAL</li>
                <li class="@Html.NavigationLink("Index", "Admin")">
                    <a href="@Url.Action("Index", "Admin")">
                        <i class="fa fa-tachometer"></i> <span>Dashboard</span>
                    </a>
                </li>
                <li class="@Html.NavigationLink("Matches", "Admin")">
                    <a href="@Url.Action("Matches", "Admin")">
                        <i class="fa fa-bolt"></i> <span>Matches</span>
                    </a>
                </li>
                <li class="@Html.NavigationLink("Finance", "Admin")">
                    <a href="@Url.Action("Finance", "Admin")">
                        <i class="fa fa-money"></i> <span>Finances</span>
                    </a>
                </li>
                <li class="header">USER MANAGEMENT</li>
                <li class="@Html.NavigationLink("Teams", "Admin")">
                    <a href="@Url.Action("Teams", "Admin")">
                        <i class="fa fa-users"></i> <span>Teams</span>
                    </a>
                </li>
                <li class="@Html.NavigationLink("Participants", "Admin")">
                    <a href="@Url.Action("Participants", "Admin")">
                        <i class="fa fa-user"></i> <span>Participants</span>
                    </a>
                </li>
                <li class="@Html.NavigationLink("TeamBuilder", "Admin")">
                    <a href="@Url.Action("TeamBuilder", "Admin")">
                        <i class="fa fa-wheelchair"></i> <span>Team builder</span>
                    </a>
                </li>
                <li class="header">ACCOUNT</li>
                <li>
                    <a href="@Url.Action("Logout", "Admin")">
                        <i class="fa fa-sign-out"></i> <span>Logout</span>
                    </a>
                </li>
            </ul>
        </section>
    </aside>

    <div class="content-wrapper">
        <section class="content">
            @RenderBody()
        </section>
    </div>

</div>

@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/Admin/app.min.js"></script>

</body>
</html>
