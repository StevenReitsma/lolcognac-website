@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
@using RiotSharp.LeagueEndpoint
@model LoLTournament.Models.Team

@if (@Model.Participants.Any(x => x.Summoner == null))
{
    <h2>Team info has not yet been downloaded from Riot API, this is done every hour, so check back later!</h2>
}
else
{
    <h1>
        @Model.Name
        @if (Model.Cancelled)
        {
            <span class="badge bg-red" style="vertical-align:middle">Cancelled</span>
        }
    </h1>

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Participants</h3>
        </div><!-- /.box-header -->
        <div class="box-body no-padding">
            <table class="table table-striped table-hover">
                <tr>
                    <th>Name</th>
                    <th>Summoner name</th>
                    <th>League</th>
                    <th>MMR</th>
                    <th>Study programme</th>
                    <th>E-mail</th>
                    <th>Student number</th>
                    <th>RU student</th>
                    <th>CognAC member</th>
                    <th>Dorans member</th>
                    <th>Team captain</th>
                    <th>Register date</th>
                </tr>
                @foreach (var p in Model.Participants)
                {
                    <tr>
                        <td>@p.FullName</td>
                        <td><a href="//lolking.net/summoner/euw/@p.Summoner.Id">@p.Summoner.Name</a></td>
                        <td>
                            @{
                                string color;
                                switch (p.CurrentSeasonTier)
                                {
                                    case Tier.Unranked:
                                        color = "333";
                                        break;
                                    case Tier.Bronze:
                                        color = "6E3A07";
                                        break;
                                    case Tier.Silver:
                                        color = "ADB3C6";
                                        break;
                                    case Tier.Gold:
                                        color = "F0AD4E";
                                        break;
                                    case Tier.Platinum:
                                        color = "5CB85C";
                                        break;
                                    case Tier.Diamond:
                                        color = "5BC0DE";
                                        break;
                                    case Tier.Master:
                                        color = "337AB7";
                                        break;
                                    case Tier.Challenger:
                                        color = "D9534F";
                                        break;
                                    default:
                                        color = "777";
                                        break;
                                }
                            }
                            <span class="label" style="background-color: #@color;">@p.CurrentSeasonTier @p.CurrentSeasonDivision</span>
                        </td>
                        <td>@p.MMR.ToString("0")</td>
                        <td>@p.StudyProgram</td>
                        <td>@p.Email</td>
                        <td>@p.StudentNumber</td>
                        <td>
                            @if (@p.RuStudent)
                            {
                                <span class="badge bg-green">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-red">No</span>
                            }
                        </td>
                        <td>
                            @if (@p.CognAC)
                            {
                                <span class="badge bg-green">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-red">No</span>
                            }
                        </td>
                        <td>
                            @if (@p.Dorans)
                            {
                                <span class="badge bg-green">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-red">No</span>
                            }
                        </td>
                        <td>
                            @if (@p.IsCaptain)
                            {
                                <span class="badge bg-green">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-red">No</span>
                            }
                        </td>

                        <td><i class="fa fa-clock-o"></i> @TimeZoneInfo.ConvertTimeFromUtc(p.RegisterTime, TimeZoneInfo.Local)</td>
                    </tr>
                }
            </table>
        </div><!-- /.box-body -->
    </div>
    <!-- /.box -->

    <div class="box" style="width:20%">
        <div class="box-header">
            <h3 class="box-title">Additional information</h3>
        </div><!-- /.box-header -->
        <div class="box-body no-padding">
            <table class="table table-striped table-hover">
                <tr>
                    <td>MMR</td>
                    <td>@Model.MMR.ToString("0")</td>
                </tr>
                <tr>
                    <td>Pool</td>
                    <td>@(Model.Pool + 1)</td>
                </tr>
                <tr>
                    <td>Price</td>
                    <td>&euro; @Model.Price.ToString("0.00")</td>
                </tr>
                <tr>
                    <td>Payment status</td>
                    <td>@Model.Payment.Status</td>
                </tr>
                <tr>
                    <td>Payed by</td>
                    <td>
                        @if (Model.Payment.Details != null)
                        {
                            @Model.Payment.Details.ConsumerName
                        }
                    </td>
                </tr>
            </table>
        </div>
    </div>


    <a href="@Url.Action("Team", "Schedule", new RouteValueDictionary {{"teamId", @Model.Id}})">
        View public team page
    </a>
}